@model BookViewModel

<h3>@Model.Title</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Book" asp-action="ChangeBook" method="post" class="form">
    <div class="form-group row">
        <label asp-for="Title" class="label"></label>
        <div class="col-sm-4">
            <input asp-for="Title" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="label"></label>
        <div class="col-sm-4">
            <input asp-for="Description" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="label">
            <label for="AuthorId">Författare:</label>
        </div>
        <div class="dropdown-form">
            <select class="form-control" asp-for="AuthorId" asp-items="(Model.Authors ?? Enumerable.Empty<Author>()).Select(u => new SelectListItem { Value = u.Id.ToString(), Text = u.FullName })">
                <option value="">Välj författare</option>
            </select>
        </div>
    </div>
    @* <div class="form-group row">
        <label asp-for="Rating" class="col-sm-2 col-form-label">Rating:</label>
        <div class="col-sm-4">
            <input asp-for="Rating" type="number" class="form-control" required />
        </div>
    </div> *@
    <div class="form-group row">
        <div class="form-button">
            <input type="submit" value="Uppdatera" class="btn btn-primary" />
        </div>
    </div>
    <input type="hidden" name="UserId" value="@Model.UserId" />
</form>
