@model Author

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Author" method="post" class="form">
    <div class="form-group row">
        <label for="FullName" class="label">Namn:</label>
        <div class="col-sm-4">
            <input type="text" id="FullName" name="FullName" class="form-control" required />
        </div>
    </div>
    <div class="form-group row">
        <label for="Description" class="label">Beskrivning:</label>
        <div class="col-sm-4">
            <textarea id="Description" name="Description" class="form-control" required></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="StartDate" class="label">Födelsedatum:</label>
        <div class="col-sm-4">
            <input type="date" id="BirthDate" name="BirthDate" class="form-control" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="form-button">
            <button type="submit" class="btn btn-primary" name="SubmitButton" value="AddAuthor">Lägg till författare</button>
        </div>
    </div>
    <input type="hidden" asp-for="Books" />
</form>