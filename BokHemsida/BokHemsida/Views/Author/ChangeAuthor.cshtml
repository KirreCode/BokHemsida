@model Author

<h3>@Model.FullName</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Author" asp-action="ChangeAuthor" method="post" class="form">
    <div class="form-group row">
        <label asp-for="FullName" class="label"></label>
        <div class="col-sm-4">
            <input asp-for="FullName" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="label"></label>
        <div class="col-sm-4">
            <input asp-for="Description" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BirthDate" class="label">Födelsedatum</label>
        <div class="col-sm-4">
            <input asp-for="BirthDate" type="date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="form-button">
            <input type="submit" value="Uppdatera" class="btn btn-primary" />
        </div>
    </div>
    <input type="hidden" asp-formaction="Books"/>
</form>
