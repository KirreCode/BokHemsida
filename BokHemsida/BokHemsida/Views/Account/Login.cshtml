@model LogInViewModel

<div class="full-container">
    <h1>Logga in</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-action="LogIn">
        <div class="form-group row">
            <div class="col-sm-2">
                <label> Användarnamn: </label>
            </div>
        </div>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" required /> @* requiered --> En bra form av validering av inputs *@
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label> Lösenord: </label>
            </div>
        </div>
        <div class="col-sm-4">
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-group row">
            <div class="offset-2 col-sm-4">
                <input type="checkbox" title="Kom ihåg mig" asp-for="RememberMe" class="form-check" />
                <label>Kom ihåg mig</label>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Logga in </button>
            </div>
        </div>
        <label> Har du inget konto? </label>
        <a asp-action="Register">Registrera dig här</a>
    </form>
</div>
